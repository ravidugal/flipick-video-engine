<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>User Management - Flipick Video Studio</title>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
*{margin:0;padding:0;box-sizing:border-box}
:root{--primary:#444ce7;--primary-light:#849bff;--gray-dark:#545454;--gray-mid:#7b8fa2;--gray-light:#aaabab;--gray-border:#e2e4e9;--bg-white:#fff;--bg-light:#f8f9fb;--bg-page:#f0f2f5;--error:#ef4444;--success:#10b981;--warning:#f59e0b}
body{font-family:'Inter',sans-serif;background:var(--bg-page);color:#1a1a1a;min-height:100vh}
.header{background:var(--bg-white);border-bottom:1px solid var(--gray-border);padding:1rem 2rem;display:flex;align-items:center;justify-content:space-between}
.logo{display:flex;align-items:center;gap:0.75rem;font-weight:600;font-size:1.125rem;text-decoration:none;color:#1a1a1a}
.logo-icon{width:40px;height:40px;background:linear-gradient(135deg,var(--primary),var(--primary-light));border-radius:8px;display:flex;align-items:center;justify-content:center;color:#fff;font-weight:700;font-size:1.25rem}
.logo-text span{color:var(--primary)}
.header-center{display:flex;gap:1.5rem}
.nav-link{color:var(--gray-mid);text-decoration:none;font-size:0.875rem;font-weight:500;padding:0.5rem 1rem;border-radius:6px;transition:all 0.2s}
.nav-link:hover{color:var(--primary);background:var(--bg-light)}
.nav-link.active{color:var(--primary);background:#f0f2ff}
.user-menu{display:flex;align-items:center;gap:1rem}
.user-name{font-weight:500;font-size:0.875rem;color:var(--gray-dark)}
.user-role{color:var(--gray-mid);font-size:0.75rem}
.btn-logout{background:var(--error);color:#fff;border:none;padding:0.5rem 1rem;border-radius:6px;cursor:pointer;font-size:0.875rem;font-weight:500}
.container{max-width:1400px;margin:0 auto;padding:2rem}
.page-header{margin-bottom:2rem;display:flex;justify-content:space-between;align-items:center}
.page-header-left h1{font-size:1.75rem;font-weight:700;margin-bottom:0.5rem}
.page-subtitle{font-size:0.875rem;color:var(--gray-mid)}
.tenant-switcher{display:none;align-items:center;gap:0.75rem}
.tenant-switcher.show{display:flex}
.tenant-label{font-size:0.875rem;color:var(--gray-dark);font-weight:500}
.tenant-select{padding:0.625rem 1rem;background:var(--bg-white);border:1px solid var(--gray-border);border-radius:8px;font-size:0.875rem;font-weight:500;cursor:pointer;min-width:200px}
.actions-bar{display:flex;justify-content:space-between;align-items:center;margin-bottom:1.5rem}
.search-box{position:relative;width:320px}
.search-box input{width:100%;padding:0.625rem 1rem 0.625rem 2.5rem;background:var(--bg-white);border:1px solid var(--gray-border);border-radius:8px;font-size:0.875rem}
.search-box:before{content:"üîç";position:absolute;left:1rem;top:50%;transform:translateY(-50%);font-size:1rem}
.btn{padding:0.625rem 1.25rem;font-size:0.875rem;font-weight:500;border-radius:8px;border:none;cursor:pointer;transition:all 0.2s;display:inline-flex;align-items:center;gap:0.5rem}
.btn-primary{background:var(--primary);color:#fff}
.btn-primary:hover{background:#3538c9}
.btn-secondary{background:var(--bg-white);color:var(--gray-dark);border:1px solid var(--gray-border)}
.btn-secondary:hover{background:var(--bg-light)}
.btn-danger{background:var(--error);color:#fff}
.btn-danger:hover{background:#dc2626}
.btn-small{padding:0.375rem 0.75rem;font-size:0.8125rem}
.card{background:var(--bg-white);border-radius:12px;border:1px solid var(--gray-border);overflow:hidden}
.table-wrapper{overflow-x:auto}
table{width:100%;border-collapse:collapse}
th{background:var(--bg-light);padding:0.875rem 1rem;text-align:left;font-size:0.75rem;font-weight:600;color:var(--gray-dark);text-transform:uppercase;letter-spacing:0.05em;border-bottom:1px solid var(--gray-border)}
td{padding:1rem;border-bottom:1px solid var(--gray-border);font-size:0.875rem}
tr:last-child td{border-bottom:none}
tr:hover{background:var(--bg-light)}
.role-badge{padding:0.25rem 0.625rem;border-radius:12px;font-size:0.75rem;font-weight:500}
.role-super_admin{background:#fef3c7;color:#92400e}
.role-tenant_admin{background:#dbeafe;color:#1e40af}
.role-tenant_user{background:#e0e7ff;color:#3730a3}
.status-badge{padding:0.25rem 0.625rem;border-radius:12px;font-size:0.75rem;font-weight:500}
.status-active{background:#d1fae5;color:#065f46}
.status-inactive{background:#fee2e2;color:#991b1b}
.actions{display:flex;gap:0.5rem}
.modal-overlay{position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.5);z-index:1000;display:none;align-items:center;justify-content:center}
.modal-overlay.show{display:flex}
.modal{background:var(--bg-white);border-radius:16px;width:90%;max-width:500px;max-height:90vh;overflow-y:auto}
.modal-header{padding:1.5rem;border-bottom:1px solid var(--gray-border);display:flex;justify-content:space-between;align-items:center}
.modal-title{font-size:1.25rem;font-weight:600}
.modal-close{background:none;border:none;font-size:1.5rem;color:var(--gray-mid);cursor:pointer;width:32px;height:32px;display:flex;align-items:center;justify-content:center;border-radius:4px}
.modal-close:hover{background:var(--bg-light)}
.modal-body{padding:1.5rem}
.form-group{margin-bottom:1.25rem}
.form-label{display:block;font-size:0.875rem;font-weight:500;color:var(--gray-dark);margin-bottom:0.5rem}
.form-input,.form-select{width:100%;padding:0.625rem 0.875rem;background:var(--bg-light);border:1px solid var(--gray-border);border-radius:8px;font-size:0.875rem;font-family:inherit}
.form-input:focus,.form-select:focus{outline:none;border-color:var(--primary);background:var(--bg-white)}
.form-help{font-size:0.75rem;color:var(--gray-mid);margin-top:0.25rem}
.modal-footer{padding:1.5rem;border-top:1px solid var(--gray-border);display:flex;gap:0.75rem;justify-content:flex-end}
.alert{padding:0.875rem 1rem;border-radius:8px;margin-bottom:1rem;font-size:0.875rem;display:none}
.alert.show{display:block}
.alert-error{background:#fee;border:1px solid #fcc;color:#c00}
.alert-success{background:#efe;border:1px solid #cfc;color:#080}
.empty-state{text-align:center;padding:4rem 2rem;color:var(--gray-mid)}
.empty-icon{font-size:3rem;margin-bottom:1rem}
.loading{display:flex;align-items:center;justify-content:center;padding:3rem;color:var(--gray-mid);gap:0.75rem}
.spinner{width:20px;height:20px;border:2px solid rgba(68,76,231,0.3);border-top-color:var(--primary);border-radius:50%;animation:spin 0.6s linear infinite}
@keyframes spin{to{transform:rotate(360deg)}}
.tenant-badge{font-size:0.75rem;color:var(--gray-mid);background:var(--bg-light);padding:0.25rem 0.5rem;border-radius:4px;display:inline-block}
</style>
</head>
<body>
<header class="header">
  <a href="/admin/users" class="logo">
    <div class="logo-icon">F</div>
    <div class="logo-text">Flipick <span>Video</span></div>
  </a>
  <nav class="header-center">
    <a href="/admin/tenants" class="nav-link" id="tenantsLink" style="display:none">Tenants</a>
    <a href="/admin/users" class="nav-link active">Users</a>
    <a href="/projects" class="nav-link">Projects</a>
    <a href="/" class="nav-link">Studio</a>
  </nav>
  <div class="user-menu">
    <div>
      <div class="user-name" id="userName">Loading...</div>
      <div class="user-role" id="userRole"></div>
    </div>
    <button class="btn-logout" onclick="logout()">Logout</button>
  </div>
</header>

<div class="container">
  <div class="page-header">
    <div class="page-header-left">
      <h1>User Management</h1>
      <p class="page-subtitle" id="subtitle">Manage user accounts and permissions</p>
    </div>
    <div class="tenant-switcher" id="tenantSwitcher">
      <span class="tenant-label">Filter by Tenant:</span>
      <select class="tenant-select" id="tenantSelect" onchange="switchTenant()">
        <option value="">All Tenants</option>
      </select>
    </div>
  </div>
  
  <div class="actions-bar">
    <div class="search-box">
      <input type="text" id="searchInput" placeholder="Search users..." onkeyup="filterUsers()">
    </div>
    <button class="btn btn-primary" onclick="openCreateModal()">+ Create User</button>
  </div>
  
  <div class="alert alert-success" id="successAlert"></div>
  <div class="alert alert-error" id="errorAlert"></div>
  
  <div class="card">
    <div class="table-wrapper">
      <div class="loading" id="loading">
        <div class="spinner"></div>
        <span>Loading users...</span>
      </div>
      <table id="usersTable" style="display:none">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th id="tenantColumn">Tenant</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="usersBody"></tbody>
      </table>
      <div class="empty-state" id="emptyState" style="display:none">
        <div class="empty-icon">üë§</div>
        <p>No users found</p>
      </div>
    </div>
  </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal-overlay" id="userModal">
  <div class="modal">
    <div class="modal-header">
      <h2 class="modal-title" id="modalTitle">Create User</h2>
      <button class="modal-close" onclick="closeModal()">√ó</button>
    </div>
    <div class="modal-body">
      <form id="userForm">
        <input type="hidden" id="userId">
        <div class="form-group">
          <label class="form-label">Full Name *</label>
          <input type="text" class="form-input" id="userName" required placeholder="John Doe">
        </div>
        <div class="form-group">
          <label class="form-label">Email *</label>
          <input type="email" class="form-input" id="userEmail" required placeholder="john@example.com">
        </div>
        <div class="form-group" id="passwordGroup">
          <label class="form-label">Password *</label>
          <input type="password" class="form-input" id="userPassword" placeholder="Min 8 characters">
          <p class="form-help">Leave blank to keep current password (when editing)</p>
        </div>
        <div class="form-group" id="tenantGroup">
          <label class="form-label">Tenant *</label>
          <select class="form-select" id="userTenant">
            <option value="">Select tenant</option>
          </select>
        </div>
        <div class="form-group">
          <label class="form-label">Role *</label>
          <select class="form-select" id="userRole">
            <!-- Options populated dynamically based on current user's role -->
          </select>
        </div>
        <div class="form-group">
          <label class="form-label">Status</label>
          <select class="form-select" id="userStatus">
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
      <button class="btn btn-primary" onclick="saveUser()">Save User</button>
    </div>
  </div>
</div>

<script>
(function() {
  const API = 'http://localhost:3000/api';
  let token = sessionStorage.getItem('token');
  let currentUser = null;
  let users = [];
  let allUsers = [];
  let tenants = [];
  let selectedTenantId = '';
  
  if (!token) {
    window.location.href = '/login';
    return;
  }
  
  // Load current user and check permissions
  fetch(API + '/auth/me', {
    headers: { 'Authorization': 'Bearer ' + token }
  })
  .then(function(r) { return r.json(); })
  .then(function(d) {
    if (!d.success) throw new Error('Invalid session');
    
    currentUser = d.user;
    
    // Check access - only super_admin and tenant_admin can access
    if (currentUser.role === 'tenant_user') {
      alert('Access denied. Only administrators can manage users.');
      window.location.href = '/projects';
      return;
    }
    
    document.getElementById('userName').textContent = currentUser.name;
    document.getElementById('userRole').textContent = currentUser.role.replace(/_/g, ' ').toUpperCase();
    
    // Show appropriate UI elements
    if (currentUser.role === 'super_admin') {
      document.getElementById('tenantsLink').style.display = 'block';
      document.getElementById('tenantSwitcher').classList.add('show');
      document.getElementById('subtitle').textContent = 'Manage users across all tenants';
      loadTenants();
    } else {
      document.getElementById('subtitle').textContent = 'Manage users in your organization';
      // Hide tenant column for tenant admins
      document.getElementById('tenantColumn').style.display = 'none';
    }
    
    loadUsers();
  })
  .catch(function(err) {
    console.error('Auth error:', err);
    sessionStorage.clear();
    window.location.href = '/login';
  });
  
  function loadTenants() {
    fetch(API + '/tenants', {
      headers: { 'Authorization': 'Bearer ' + token }
    })
    .then(function(r) { return r.json(); })
    .then(function(d) {
      if (d.success) {
        tenants = d.tenants || [];
        
        // Populate tenant filter
        const select = document.getElementById('tenantSelect');
        tenants.forEach(function(t) {
          const opt = document.createElement('option');
          opt.value = t.id;
          opt.textContent = t.name;
          select.appendChild(opt);
        });
        
        // Populate tenant selector in modal
        const modalSelect = document.getElementById('userTenant');
        tenants.forEach(function(t) {
          const opt = document.createElement('option');
          opt.value = t.id;
          opt.textContent = t.name;
          modalSelect.appendChild(opt);
        });
      }
    });
  }
  
  function loadUsers() {
    fetch(API + '/users', {
      headers: { 'Authorization': 'Bearer ' + token }
    })
    .then(function(r) { return r.json(); })
    .then(function(d) {
      if (d.success) {
        allUsers = d.users || [];
        filterByTenant();
      } else {
        throw new Error(d.error || 'Failed to load users');
      }
    })
    .catch(function(err) {
      showError('Failed to load users: ' + err.message);
    })
    .finally(function() {
      document.getElementById('loading').style.display = 'none';
    });
  }
  
  window.switchTenant = function() {
    selectedTenantId = document.getElementById('tenantSelect').value;
    filterByTenant();
  };
  
  function filterByTenant() {
    if (selectedTenantId === '') {
      users = allUsers;
    } else {
      users = allUsers.filter(function(u) {
        return u.tenant_id === selectedTenantId;
      });
    }
    renderUsers();
  }
  
  function renderUsers() {
    const tbody = document.getElementById('usersBody');
    const table = document.getElementById('usersTable');
    const empty = document.getElementById('emptyState');
    
    if (users.length === 0) {
      table.style.display = 'none';
      empty.style.display = 'block';
      return;
    }
    
    table.style.display = 'table';
    empty.style.display = 'none';
    
    tbody.innerHTML = users.map(function(u) {
      const isSuperAdmin = currentUser.role === 'super_admin';
      const canEdit = isSuperAdmin || (currentUser.role === 'tenant_admin' && u.role !== 'super_admin' && u.tenant_id === currentUser.tenantId);
      const canDelete = canEdit && u.id !== currentUser.id; // Can't delete self
      
      return '<tr>' +
        '<td><strong>' + u.name + '</strong></td>' +
        '<td>' + u.email + '</td>' +
        '<td><span class="role-badge role-' + u.role + '">' + u.role.replace(/_/g, ' ') + '</span></td>' +
        (isSuperAdmin ? '<td><span class="tenant-badge">' + (u.tenant_name || 'System') + '</span></td>' : '') +
        '<td><span class="status-badge status-' + u.status + '">' + u.status + '</span></td>' +
        '<td>' + new Date(u.created_at).toLocaleDateString() + '</td>' +
        '<td class="actions">' +
          (canEdit ? '<button class="btn btn-secondary btn-small" onclick=\'editUser(' + JSON.stringify(u) + ')\'>Edit</button>' : '') +
          (canDelete ? '<button class="btn btn-danger btn-small" onclick="deleteUser(\'' + u.id + '\',\'' + u.name + '\')">Delete</button>' : '') +
        '</td>' +
      '</tr>';
    }).join('');
  }
  
  window.filterUsers = function() {
    const search = document.getElementById('searchInput').value.toLowerCase();
    const filtered = allUsers.filter(function(u) {
      const matchesSearch = u.name.toLowerCase().includes(search) || u.email.toLowerCase().includes(search);
      const matchesTenant = selectedTenantId === '' || u.tenant_id === selectedTenantId;
      return matchesSearch && matchesTenant;
    });
    
    const temp = users;
    users = filtered;
    renderUsers();
    users = temp;
  };
  
  window.openCreateModal = function() {
    document.getElementById('modalTitle').textContent = 'Create User';
    document.getElementById('userForm').reset();
    document.getElementById('userId').value = '';
    document.getElementById('userPassword').required = true;
    document.getElementById('passwordGroup').querySelector('.form-help').style.display = 'none';
    
    // Populate role options based on current user
    const roleSelect = document.getElementById('userRole');
    roleSelect.innerHTML = '';
    
    if (currentUser.role === 'super_admin') {
      roleSelect.innerHTML = 
        '<option value="super_admin">Super Administrator</option>' +
        '<option value="tenant_admin">Tenant Administrator</option>' +
        '<option value="tenant_user">Tenant User</option>';
      document.getElementById('tenantGroup').style.display = 'block';
    } else {
      roleSelect.innerHTML = 
        '<option value="tenant_admin">Tenant Administrator</option>' +
        '<option value="tenant_user">Tenant User</option>';
      document.getElementById('tenantGroup').style.display = 'none';
      document.getElementById('userTenant').value = currentUser.tenantId;
    }
    
    document.getElementById('userModal').classList.add('show');
  };
  
  window.editUser = function(user) {
    document.getElementById('modalTitle').textContent = 'Edit User';
    document.getElementById('userId').value = user.id;
    document.getElementById('userName').value = user.name;
    document.getElementById('userEmail').value = user.email;
    document.getElementById('userPassword').value = '';
    document.getElementById('userPassword').required = false;
    document.getElementById('passwordGroup').querySelector('.form-help').style.display = 'block';
    document.getElementById('userStatus').value = user.status;
    
    // Populate role options
    const roleSelect = document.getElementById('userRole');
    roleSelect.innerHTML = '';
    
    if (currentUser.role === 'super_admin') {
      roleSelect.innerHTML = 
        '<option value="super_admin">Super Administrator</option>' +
        '<option value="tenant_admin">Tenant Administrator</option>' +
        '<option value="tenant_user">Tenant User</option>';
      document.getElementById('tenantGroup').style.display = 'block';
      document.getElementById('userTenant').value = user.tenant_id;
    } else {
      roleSelect.innerHTML = 
        '<option value="tenant_admin">Tenant Administrator</option>' +
        '<option value="tenant_user">Tenant User</option>';
      document.getElementById('tenantGroup').style.display = 'none';
    }
    
    document.getElementById('userRole').value = user.role;
    document.getElementById('userModal').classList.add('show');
  };
  
  window.closeModal = function() {
    document.getElementById('userModal').classList.remove('show');
  };
  
  window.saveUser = function() {
    const id = document.getElementById('userId').value;
    const name = document.getElementById('userName').value.trim();
    const email = document.getElementById('userEmail').value.trim();
    const password = document.getElementById('userPassword').value;
    const role = document.getElementById('userRole').value;
    const status = document.getElementById('userStatus').value;
    
    if (!name || !email || !role) {
      alert('Please fill in all required fields');
      return;
    }
    
    if (!id && !password) {
      alert('Password is required for new users');
      return;
    }
    
    let tenantId;
    if (currentUser.role === 'super_admin') {
      tenantId = document.getElementById('userTenant').value;
      if (!tenantId) {
        alert('Please select a tenant');
        return;
      }
    } else {
      tenantId = currentUser.tenantId;
    }
    
    const data = { name, email, role, status, tenant_id: tenantId };
    if (password) data.password = password;
    
    const url = id ? API + '/users/' + id : API + '/users';
    const method = id ? 'PUT' : 'POST';
    
    fetch(url, {
      method: method,
      headers: {
        'Authorization': 'Bearer ' + token,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
    .then(function(r) { return r.json(); })
    .then(function(d) {
      if (d.success) {
        showSuccess(d.message || 'User saved successfully');
        closeModal();
        loadUsers();
      } else {
        throw new Error(d.error);
      }
    })
    .catch(function(err) {
      showError(err.message);
    });
  };
  
  window.deleteUser = function(id, name) {
    if (!confirm('Delete user "' + name + '"?\n\nThis will deactivate the account and cannot be undone.')) {
      return;
    }
    
    fetch(API + '/users/' + id, {
      method: 'DELETE',
      headers: { 'Authorization': 'Bearer ' + token }
    })
    .then(function(r) { return r.json(); })
    .then(function(d) {
      if (d.success) {
        showSuccess(d.message || 'User deleted successfully');
        loadUsers();
      } else {
        throw new Error(d.error);
      }
    })
    .catch(function(err) {
      showError(err.message);
    });
  };
  
  function showSuccess(msg) {
    const el = document.getElementById('successAlert');
    el.textContent = msg;
    el.classList.add('show');
    setTimeout(function() { el.classList.remove('show'); }, 3000);
  }
  
  function showError(msg) {
    const el = document.getElementById('errorAlert');
    el.textContent = msg;
    el.classList.add('show');
    setTimeout(function() { el.classList.remove('show'); }, 5000);
  }
  
  window.logout = function() {
    sessionStorage.clear();
    window.location.href = '/login';
  };
})();
</script>
</body>
</html>